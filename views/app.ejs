<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Kiwi Reader</title>

    <!-- Meta tags -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/toastr/toastr.css">
    <link rel="stylesheet" href="/style/bootstrap-themes/paper.css">
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/animate.css">

    <!-- Bower components -->
    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="/bower_components/ng-ckeditor/libs/ckeditor/ckeditor.js"></script>
    <script src="/bower_components/ng-ckeditor/ng-ckeditor.js"></script>
    <script src="/bower_components/angular-socket-io/socket.js"></script>
    <script src="/bower_components/ui-router/release/angular-ui-router.min.js"></script>
    <script src="/bower_components/ngUpload/ng-upload.js"></script>
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap.min.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
    <script src="/bower_components/toastr/toastr.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="/socket.io/socket.io.js"></script>


    <!-- Angular app files -->
    <script src="/app/app.js"></script>
    <script src="/app/directives/text_select.js"></script>
    <script src="/app/directives/link_location.js"></script>
    <script src="/app/directives/preview_box.js"></script>
    <script src="/app/controllers/books.js"></script>
    <script src="/app/controllers/book.js"></script>
    <script src="/app/controllers/files.js"></script>
    <script src="/app/controllers/file.js"></script>
    <script src="/app/controllers/settings.js"></script>
    <script src="/app/controllers/profile.js"></script>
    <script src="/app/controllers/bookmarks.js"></script>

    <script src="/app/factories/bookmark.js"></script>
    <script src="/app/factories/file.js"></script>
    <script src="/app/factories/book.js"></script>

  </head>
  <body ng-app="kiwiReader">
    <nav id="mainNavbar" class="navbar navbar-default border-sharp no-margin">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Kiwi Reader</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><a ui-sref="books">Книги</a></li>
            <li><a ui-sref="files">Файлове</a></li>
            <li><a ui-sref="bookmarks">Цитати</a></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{user.name}} <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a ui-sref="profile">Профил</a></li>
                <!-- <li><a ui-sref="settings">Настройки</a></li> -->
                <li><a href="/logout">Изход</a></li>
              </ul>
            </li>
          </ul>

        </div><!-- /.navbar-collapse -->

      </div><!-- /.container-fluid -->
    </nav>
    <div ui-view=""></div>
  </body>
</html>
